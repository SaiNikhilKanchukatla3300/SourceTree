<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_all_courses" tools:targetApi="ice_cream_sandwich">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_weight="1"
        android:columnCount="8"
        android:rowCount="8"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="151dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            android:layout_row="0"
            android:layout_column="0">

            <LinearLayout
                android:id="@+id/ad_l"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ad_i"
                    android:layout_width="180dp"
                    android:layout_height="104dp"
                    android:contentDescription="@string/todo"
                    android:onClick="home_lp"
                    app:srcCompat="@drawable/ad" />

                <TextView
                    android:id="@+id/gh_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/android_development" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="151dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            android:layout_row="0"
            android:layout_column="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/wd_i"
                    android:layout_width="180dp"
                    android:layout_height="104dp"
                    android:contentDescription="@string/sc"
                    android:onClick="home_lp"
                    app:srcCompat="@drawable/wd" />

                <TextView
                    android:id="@+id/wd_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/web_development" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="151dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            android:layout_row="2"
            android:layout_column="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dc_i"
                    android:layout_width="180dp"
                    android:layout_height="104dp"
                    android:contentDescription="@string/todo"
                    android:onClick="home_lp"
                    app:srcCompat="@drawable/datasimg" />

                <TextView
                    android:id="@+id/ds_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/datascience" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>







    </GridLayout>
</ScrollView>


