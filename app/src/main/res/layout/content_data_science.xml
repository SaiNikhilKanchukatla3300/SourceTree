<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DataScience"
    tools:showIn="@layout/app_bar_data_science">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:onClick="movec"
        android:orientation="vertical">

        <Button
            android:id="@+id/h7_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_buttons"
            android:onClick="movec"
            android:text="@string/analytics_vidya"
            android:textAllCaps="false"
            app:elevation="20dp" />

        <Button
            android:id="@+id/h2_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_buttons"
            android:onClick="movec"
            android:text="@string/datacamp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/h3_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_buttons"
            android:onClick="movec"
            android:text="@string/cognitive_class"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/h9_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_buttons"
            android:onClick="movec"
            android:text="@string/kaggle"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/h10_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_buttons"
            android:onClick="movec"
            android:text="@string/data_science_specialization_course"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/h1_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_buttons"
            android:onClick="movec"
            android:text="@string/refactored"
            android:textAllCaps="false" />

    </LinearLayout>
</ScrollView>

