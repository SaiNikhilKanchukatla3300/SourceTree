<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_placements" tools:targetApi="ice_cream_sandwich">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_weight="1"
        android:columnCount="8"
        android:rowCount="8"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="151dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            android:layout_row="0"
            android:layout_column="0">

            <LinearLayout
                android:id="@+id/gf_l"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ad_i"
                    android:layout_width="180dp"
                    android:layout_height="104dp"
                    android:contentDescription="@string/todo"
                    android:onClick="move_pla"
                    app:srcCompat="@drawable/gfg" />

                <TextView
                    android:id="@+id/gf_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/placements_geeksforgeeks" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="151dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            android:layout_row="0"
            android:layout_column="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ib_i"
                    android:layout_width="180dp"
                    android:layout_height="104dp"
                    android:contentDescription="@string/sc"
                    android:onClick="move_pla"
                    app:srcCompat="@drawable/ib" />

                <TextView
                    android:id="@+id/ib_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/interviewbit" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="151dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            android:layout_row="1"
            android:layout_column="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ic_i"
                    android:layout_width="180dp"
                    android:layout_height="104dp"
                    android:contentDescription="@string/todo"
                    android:onClick="move_pla"
                    app:srcCompat="@drawable/interviewkickstart" />

                <TextView
                    android:id="@+id/ds_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/interviewkickstart" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="151dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            android:layout_row="1"
            android:layout_column="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/idd_i"
                    android:layout_width="180dp"
                    android:layout_height="104dp"
                    android:contentDescription="@string/todo"
                    android:onClick="move_pla"
                    app:srcCompat="@drawable/indeed" />

                <TextView
                    android:id="@+id/idd_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/indeed" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="151dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            android:layout_row="2"
            android:layout_column="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ix_i"
                    android:layout_width="180dp"
                    android:layout_height="104dp"
                    android:contentDescription="@string/todo"
                    android:onClick="move_pla"
                    app:srcCompat="@drawable/indianbix" />

                <TextView
                    android:id="@+id/ix_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="IndiaBix" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="151dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            android:layout_row="2"
            android:layout_column="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/is_i"
                    android:layout_width="180dp"
                    android:layout_height="104dp"
                    android:contentDescription="@string/todo"
                    android:onClick="move_pla"
                    app:srcCompat="@drawable/internshala" />

                <TextView
                    android:id="@+id/is_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/internshala" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="151dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            android:layout_row="3"
            android:layout_column="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/gd_i"
                    android:layout_width="180dp"
                    android:layout_height="104dp"
                    android:contentDescription="@string/todo"
                    android:onClick="move_pla"
                    app:srcCompat="@drawable/glassdoor" />

                <TextView
                    android:id="@+id/gd_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/glassdoor" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </GridLayout>
</ScrollView>


