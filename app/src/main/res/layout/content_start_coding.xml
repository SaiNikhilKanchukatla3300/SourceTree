<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".StartCoding"
    tools:showIn="@layout/app_bar_start_coding">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_weight="1"
        android:columnCount="5"
        android:rowCount="5"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="151dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            android:layout_row="0"
            android:layout_column="0">

            <LinearLayout
                android:id="@+id/hc_l"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hc_i"
                    android:layout_width="180dp"
                    android:layout_height="104dp"
                    android:contentDescription="@string/todo"
                    android:onClick="move_code"
                    app:srcCompat="@drawable/hackerrank" />

                <TextView
                    android:id="@+id/hc_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/hackerrank" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="151dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            android:layout_row="0"
            android:layout_column="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/he_i"
                    android:layout_width="180dp"
                    android:layout_height="104dp"
                    android:contentDescription="@string/sc"
                    android:onClick="move_code"
                    app:srcCompat="@drawable/hackerearth" />

                <TextView
                    android:id="@+id/he_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/hackerearth" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="151dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            android:layout_row="1"
            android:layout_column="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cc_i"
                    android:layout_width="180dp"
                    android:layout_height="104dp"
                    android:contentDescription="@string/todo"
                    android:onClick="move_code"
                    app:srcCompat="@drawable/codechef" />

                <TextView
                    android:id="@+id/cc_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/codechef" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="151dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            android:layout_row="1"
            android:layout_column="1">

            <LinearLayout
                android:id="@+id/cf_l"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cf_i"
                    android:layout_width="180dp"
                    android:layout_height="104dp"
                    android:contentDescription="@string/todo"
                    android:onClick="move_code"
                    app:srcCompat="@drawable/codeforce" />

                <TextView
                    android:id="@+id/cf_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/codeforces" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="151dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            android:layout_row="2"
            android:layout_column="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tc_i"
                    android:layout_width="180dp"
                    android:layout_height="104dp"
                    android:contentDescription="@string/todo"
                    android:onClick="move_code"
                    app:srcCompat="@drawable/topcoder" />

                <TextView
                    android:id="@+id/tc_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/topcoder" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="151dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            android:layout_row="2"
            android:layout_column="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/lc_i"
                    android:layout_width="180dp"
                    android:layout_height="104dp"
                    android:contentDescription="@string/todo"
                    android:onClick="move_code"
                    app:srcCompat="@drawable/lc" />

                <TextView
                    android:id="@+id/lc_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/leetcode" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="151dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            android:layout_row="3"
            android:layout_column="0">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ccal_i"
                    android:layout_width="180dp"
                    android:layout_height="104dp"
                    android:contentDescription="@string/todo"
                    android:onClick="move_code"
                    app:srcCompat="@drawable/codcal" />

                <TextView
                    android:id="@+id/ccal_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/coders_calender" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>
</ScrollView>